<% title '首页' %>
<main class="container" style="margin-top: 10px">
  <div class="row">
    <div class="col-sm-9 col-12">
      <%= render(partial: 'shared/bill_item', collection: @bills, as: 'bill') if qq_host? %>

      <%= render partial: 'shared/article', collection: @articles, as: 'article' %>
      <div class="paginate-container">
        <%= will_paginate @articles %>
      </div>
    </div>
    <div class="col-sm-3 column-none" style="padding: 0px;">
      <%= render :partial => 'shared/latest_fanli' %>
      <%= render :partial => 'shared/popular_articles' %>
    </div>
  </div>
</main>
