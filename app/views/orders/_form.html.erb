<%= simple_form_for(@order) do |f| %>
    <%= f.input :phone_num, label: '手机号码' %>
    <%= f.input :investor_username, label: '姓名' %>
    <%= f.input :time_horizon, label: '投资标期' %>
    <%= f.input :amount, label: '投资金额' %>
    <%= f.input :alipay, label: '支付宝账户' %>
    <%= f.input :alipay_name, label: '支付宝姓名' %>
    <%= f.input :qq_number, label: 'QQ号' %>
    <%= f.input :qq_name, label: 'QQ昵称' %>
    <%= f.input :screenshots, label: '截图' %>
    <%= f.input :platform_username, label: '平台用户名' %>
    <%= f.input :password, label: '查询密码' %>
    <%= f.input :note, label: '备注' %>
    <%= f.input :invest_date, type: "date", label: '投资日期' %>
    <%= f.button :submit %>
<% end %>

